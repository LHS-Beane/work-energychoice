    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const navItems = document.querySelectorAll('.nav-item');
            const tabContents = document.querySelectorAll('.tab-content');
            let weaknessChartInstance = null;

            function showTab(tabId) {
                tabContents.forEach(content => {
                    content.classList.remove('active');
                });
                const activeContent = document.getElementById('content-' + tabId);
                if (activeContent) {
                    activeContent.classList.add('active');
                }

                navItems.forEach(item => {
                    item.classList.remove('active');
                    if (item.getAttribute('data-tab') === tabId) {
                        item.classList.add('active');
                    }
                });

                if (tabId === 'analysis' && !weaknessChartInstance) {
                    renderWeaknessChart();
                }
            }
            
            window.showTab = showTab;

            navItems.forEach(item => {
                item.addEventListener('click', () => {
                    const tabId = item.getAttribute('data-tab');
                    showTab(tabId);
                });
            });

            function renderWeaknessChart() {
                const ctx = document.getElementById('weaknessChart').getContext('2d');
                if (ctx) {
                    weaknessChartInstance = new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: ['Struggle with "Net Force"', 'Struggle with "When is Work Done?"'],
                            datasets: [{
                                label: 'Student Weakness Area (Illustrative)',
                                data: [60, 70],
                                backgroundColor: [
                                    'rgba(239, 68, 68, 0.6)',
                                    'rgba(239, 68, 68, 0.8)'
                                ],
                                borderColor: [
                                    'rgba(239, 68, 68, 1)',
                                    'rgba(239, 68, 68, 1)'
                                ],
                                borderWidth: 1
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    max: 100,
                                    ticks: {
                                        callback: function(value) {
                                            return value + '%'
                                        }
                                    }
                                }
                            },
                            plugins: {
                                legend: {
                                    display: false
                                },
                                tooltip: {
                                    callbacks: {
                                        label: function(context) {
                                            return `${context.label}: ${context.raw}% of students struggle in this area.`;
                                        }
                                    }
                                }
                            }
                        }
                    });
                }
            }

            showTab('objectives');
        });
    </script>

